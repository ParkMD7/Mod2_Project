<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img src="assets/home_1.jpg" alt="Los Angeles" width="1260" height="500">
      <div class="center carousel-caption d-none d-md-block text1">
        <h1>Welcome to J.T.S Store</h1>
        <br><br><br>
      <%= link_to "Destroy Pet Store", pet_shop_subway_path, class: "btn btn-danger btn-xlarge-danger" %>
      </div>
    </div>

    <div class="item">
      <img src="assets/home_2.jpg" alt="Chicago" width="1260" height="500">
      <div class="center carousel-caption d-none d-md-block text1">
        <h1>Welcome to J.T.S Store</h1>
        <br><br><br>
        <%= link_to "Destroy Pet Store", pet_shop_subway_path, class: "btn btn-danger btn-xlarge-danger" %>
      </div>
    </div>

    <div class="item">
      <img src="assets/home_3.jpg" alt="New York" width="1260" height="500">
      <div class="center carousel-caption d-none d-md-block text1">
        <h1>Welcome to J.T.S Store</h1>
        <br><br><br>
          <%= link_to "Destroy Pet Store", pet_shop_subway_path, class: "btn btn-danger btn-xlarge-danger" %>
      </div>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
