<h2>create new Train Complaint</h2>

<%= form_for @train_complaint do |f| %>
  <div >
    <%= f.label :title  %>
    <%= f.text_field :title %>
  </div>
  <div >
    <%= f.label :description  %>
    <%= f.text_field :description%>
  </div>
  <div >
    <%= f.label "Train"%>
    <%= f.collection_select(:train_id, Train.all, :id, :line) %>
  </div>
  <div>
    <!-- hidden_field(:object, :field, :value => params[:requestval]) -->
    <%= f.hidden_field(:user_id, {value: session[:user_id]}) %>
    <%= f.submit %>
  </div>

<% end %>
